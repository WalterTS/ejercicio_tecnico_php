{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <h3 class="text-center my-3">Editar contacto</h3>
    {{ form_start(edit_form) }}
    <div class="form-group">
      {{ form_label(edit_form.name, 'Nombre completo') }}
      {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(edit_form.lastname, 'Apellidos') }}
      {{ form_widget(edit_form.lastname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(edit_form.phone, 'Teléfono') }}
      {{ form_widget(edit_form.phone, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(edit_form.address, 'Dirección') }}
      {{ form_widget(edit_form.address, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(edit_form.facebook, 'Facebook (opcional)') }}
      {{ form_widget(edit_form.facebook, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(edit_form.instagram, 'Instagram (opcional)') }}
      {{ form_widget(edit_form.instagram, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success">Editar</button>
    </div>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('contactos_index') }}">Regresar al listado de contactos</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Eliminar contacto">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
